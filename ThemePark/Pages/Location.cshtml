@page "{id}"
@model ThemePark.Pages.LocationModel
@{
    ViewData["Title"] = $"Location: {Model.Location.Name}";
}

<p><a asp-page="Index" title="Back to Attractions">&laquo; Back to Attractions</a></p>
<h1>Attractions at @Model.Location.Name</h1>
<table class="table table-condensed">
    <thead>
    <tr>
        <th class="w-25">Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var attraction in Model.Location.Attractions)
    {
        <tr>
            <td>@attraction.Name</td>
        </tr>
    }
    </tbody>
</table>

<a asp-page="locations" title="Go to All Locations">All Locations</a>
